<!DOCTYPE html>
<html>
<head>
  <title>I am Programmer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'angular-material.min', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'cssmaterial.min', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

<!-- Angular Material Dependencies -->
    <%= javascript_include_tag 'angular.min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'angular-animate.min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'angular-aria.min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'angular-material.min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'angular-mocks', 'data-turbolinks-track' => true %>
    
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>">I am Programmer</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="<%= root_path %>">Fun</a></li>
        <% if !session[:user_id].nil? %>
          <li><a href="/posts/new">Upload</a></li>
        <% end %>
        </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if !session[:user_id].nil? %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/profile/<%= User.find(session[:user_id]).username %>"><%= User.find(session[:user_id]).username %></a></li>
            <li><a href="/settings">Settings</a></li>
            <li><a href="/auth/logout">Logout</a></li>
          </ul>
        </li>
        <% else %>
          <li><a href="/auth/signup">Sign Up</a></li>
          <li><a href="/auth/login">Log In</a></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container mar70">
	
  <% flash.each do |name, msg| %>
    <% if msg=="You have successfully logged out" %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <%= content_tag :div, msg, class: name %> 
      </div>
      <% elsif msg=="Password changed successfully" %>
        <div class="alert alert-info alert-dismissible" role="alert">
        <%= content_tag :div, msg, class: name %>
      </div>
      <% else %>
        <div class="alert alert-danger alert-dismissible warning" role="alert">
          <%= content_tag :div, msg, class: name %>
        </div>
      <% end %>
  <% end %>

  <%= yield %>
  
</div>

</body>
</html>
