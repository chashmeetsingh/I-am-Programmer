
<div class = "container">
			<div class="row">
				<div class="col-lg-3"></div>
				<div class="col-lg-6">
					<div class="wrapper">
						<%= form_tag "/auth/attempt_login" , name: "Login_Form", class: "form-signin" do %>
						  <h3 class="form-signin-heading">Welcome Back ! Please Login</h3>
													  <hr class="colorgraph">
						  <%= label_tag :username, "Username" %>
						  <%= text_field_tag :username , "", type:"text" ,class: "form-control" ,name:"username" ,placeholder:"Username" ,required:"" ,autofocus:"" ,id:"username"  %><br>
						  <%= label_tag(:password, "Password") %>
						  <%= password_field_tag :password, "", type:"password" ,class: "form-control" ,name:"password" ,placeholder:"Password" ,required:"" ,autofocus:"" ,id:"password" %><br>
						  <%= submit_tag "Log In", :class => "btn btn-lg btn-success btn-block" %>
						<% end %>		
					</div>
				</div>
				<div class="col-lg-3"></div>
			</div>
		</div>