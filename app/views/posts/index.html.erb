
<div> 
    <div class="col-xs-6">
        <div class=" panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Panel title</h3>
          </div>
          <div class="panel-body">
            <% @posts.each do |post| %>
                <a href="<%= post_url(post) %>"><%= image_tag(post.image.profile_size.url) %></a>
                <h2><%= link_to post.title, post %></h2>
                <%= post.description %>
                <br>
              <% if user_signed_in? %>
              <% if current_user %>    
                    <%= link_to 'Show', post %>
                    <%= link_to 'Edit', edit_post_path(post) %>
                    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %> 
              <% end %>
            <% end %>
          </div>
        </div>
    </div>
    <div class="col-xs-2"></div>
    <% if user_signed_in? %>
    <div class="span3 col-xs-4">
	   <div class="side-bar">
    	    <div class="ls_profile ls_blue">
                <img src="http://iamprogrammer.net/images/membersprofilepic/noprofilepicture.jpg">
                <div class="ls_profile_info">
                    <h3><a href="#"><%= current_user.email %></a></h3>
                    <p>Points : 0</p>
                    <p>Total Views : 0</p>
                </div>
                <div class="clearfix"></div>
           </div>
       </div>
    </div>
    <% end %>
</div>    
