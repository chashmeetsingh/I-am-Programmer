
<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

      
  <% @posts.each do |post| %>
       <a href="<%= post_url(post) %>"><%= image_tag(post.image.profile_size.url) %></a>
    <h2><%= link_to post.title, post %></h2>
    <%= post.description %>
    <br>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<br>

